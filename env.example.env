# Théo 
# MediResolv - Configuration Production
# COPIEZ CE FICHIER EN .env ET MODIFIEZ LES VALEURS

# === ENVIRONNEMENT ===
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# === BASE DE DONNÉES MARIADB ===
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mediresolv
DB_USER=mediresolv
DB_PASSWORD=CHANGEZ_MOT_PASSE_SECURISÉ_ICI
DB_ROOT_PASSWORD=CHANGEZ_MOT_PASSE_ROOT_ICI

# === SÉCURITÉ JWT ===
JWT_SECRET=CHANGEZ_CLÉ_SECRÈTE_TRES_LONGUE_ET_UNIQUE_ICI
JWT_EXPIRE=8h
JWT_REFRESH_EXPIRE=7d

# === REDIS CACHE ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGEZ_MOT_PASSE_REDIS_ICI

# === APPLICATION ===
FRONTEND_URL=https://votre-domaine.com
APP_NAME=MediResolv
ADMIN_EMAIL=admin@votre-domaine.com

# === EMAIL SMTP ===
EMAIL_HOST=smtp.votre-domaine.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=noreply@votre-domaine.com
EMAIL_PASS=CHANGEZ_MOT_PASSE_EMAIL_ICI
EMAIL_FROM="MediResolv <noreply@votre-domaine.com>"

# === FICHIERS ET UPLOADS ===
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# === SAUVEGARDES ===
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=30
BACKUP_TIME=02:00

# === MONITORING (OPTIONNEL) ===
GRAFANA_PASSWORD=CHANGEZ_MOT_PASSE_GRAFANA_ICI
PROMETHEUS_ENABLED=false

# === SSL/HTTPS (PRODUCTION) ===
USE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/mediresolv.crt
SSL_KEY_PATH=/etc/ssl/private/mediresolv.key

# === LIMITES DE SÉCURITÉ ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
SESSION_TIMEOUT=28800000

# === MODE DEBUG (DÉVELOPPEMENT UNIQUEMENT) ===
DEBUG_MODE=false
SQL_LOGGING=false
